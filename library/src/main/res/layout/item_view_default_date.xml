<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_date_picker_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/date_card_width"
    android:layout_height="match_parent"
    android:background="@color/date_item_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date_picker_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/date_item_day"
        android:textSize="25sp"
        tools:text="12"/>

    <TextView
        android:id="@+id/tv_date_picker_day_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_date_picker_day"
        android:layout_centerHorizontal="true"
        android:textColor="@color/date_item_day_name"
        tools:text="Monday"/>

    <TextView
        android:id="@+id/tv_date_picker_month_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date_picker_day"
        android:layout_centerHorizontal="true"
        android:textColor="@color/date_item_month_name"
        tools:text="January"/>

    <View
        android:id="@+id/view_date_indicator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/date_item_unselected_indicator"/>

</RelativeLayout>
